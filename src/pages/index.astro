---
import SiteLayout from "../layouts/SiteLayout.astro";
import { site } from "../lib/site";

const researchThemes = [
	{
		title: "Algebraic groups and monoids",
		summary:
			"Structure, classification, and geometric properties, with applications to representation theory and combinatorics.",
		keywords: ["Reductive groups", "Invariant theory", "Symmetric varieties"],
	},
	{
		title: "Representation theory",
		summary:
			"Interactions between representations, geometry, and number theory—especially where symmetry clarifies complex systems.",
		keywords: ["Unitary representations", "Harmonic analysis", "Category-theoretic tools"],
	},
	{
		title: "Algebraic geometry",
		summary:
			"Geometric methods for understanding algebraic structures and moduli, connecting geometry with computational techniques.",
		keywords: ["Singularities", "Compactifications", "Birational geometry"],
	},
	{
		title: "Error-correcting codes & secure communication",
		summary:
			"Algebraic and geometric approaches to robust communication, coding theory, and cryptographic protocols.",
		keywords: ["Classical & quantum codes", "Post-quantum security", "Information theory"],
	},
] as const;

const teaching = [
	{
		course: "Consolidated Calculus (Math 1310)",
		term: "Current",
		note: "Course materials and assignments are available to enrolled students via Canvas.",
	},
] as const;

const almaMaters = [
	{
		school: "University of Pennsylvania",
		degree: "PhD",
		year: "2006",
		href: "https://www.math.upenn.edu/",
		logo: "/images/Penn-logo.png",
	},
	{
		school: "METU (Turkey)",
		degree: "BSc",
		year: "2001",
		href: "https://math.metu.edu.tr/en/program-overview",
		logo: "/images/metu.png",
	},
] as const;

const advisees = [
	{
		name: "Zafar Iqbal",
		degree: "PhD",
		note: "2024–present • co-advising with A. Casimiro (NOVA FCT)",
	},
	{ name: "Naufil Sakran", degree: "PhD", note: "2021–present" },
	{ name: "Dillon Montero", degree: "PhD", note: "2021–2025" },
	{ name: "Nestor Diaz Morera", degree: "PhD", note: "2018–2024" },
	{ name: "Hayden Houser", degree: "PhD", note: "2017–2024" },
	{ name: "Corey Wolfe", degree: "PhD", note: "2017–2024" },
	{ name: "Yiyang She", degree: "PhD", note: "2016–2021" },
	{ name: "Aram Bingham", degree: "PhD", note: "2015–2021" },
	{ name: "Tien Le", degree: "PhD", note: "2015–2020" },
	{ name: "Özlem Uğurlu", degree: "PhD", note: "2013–2018" },
	{ name: "Tim Twelbeck", degree: "PhD", note: "2008–2013" },
	{ name: "Dejun Zhang", degree: "MS", note: "2020" },
] as const;

const editorialWork = [
	{ label: "Semigroup Forum", href: "https://www.springer.com/journal/233" },
	{ label: "Journal of GGT", href: "https://www.springer.com/journal/41468" },
	{ label: "Reviewer for Mathscinet and zbMath", href: "https://mathscinet.ams.org/" },
] as const;

const newsItems = [
	{
		year: "2025",
		detail:
			"Visiting IIT Bombay for the Combinatorics, Geometry, and Representation Theory conference at the International Centre for Theoretical Sciences (dedicated to the memory of Prof. V. Lakshmibai).",
	},
	{ year: "2025", detail: "Provost’s Proof of Concept award." },
	{
		year: "2024",
		detail: "Fulbright US Scholar to Portugal award. Host institution: Universidade Nova de Lisboa.",
	},
	{
		year: "2023",
		detail: "Visiting Indian Institute of Technology Bombay.",
	},
	{
		year: "2023",
		detail: "Visiting Okinawa Institute of Science and Technology, Japan.",
	},
] as const;
---

<SiteLayout title="Home" description={site.description}>
	<div class="space-y-12">
		<section class="rounded-2xl border border-stone-200 bg-white/90 p-8 shadow-sm ring-1 ring-stone-200">
			<div class="max-w-3xl space-y-6">
				<p class="text-xs font-semibold uppercase tracking-[0.24em] text-emerald-700">
					Tulane University • Mathematics
				</p>
				<div class="space-y-3">
					<h1 class="text-4xl font-semibold leading-tight sm:text-5xl">Mahir Bilen Can</h1>
					<p class="text-lg leading-8 text-[#2c3a40]">
						I am a professor of mathematics at Tulane University. My research explores the interface of algebraic structures,
						representation theory, and geometry, with applications ranging from error-correcting codes to secure communication.
					</p>
				</div>

				<div class="flex flex-wrap gap-3">
					<a class="btn-primary" href="/CV.pdf">Download CV</a>
					<a class="btn-secondary" href={`mailto:${site.email}`}>Email</a>
				</div>

				<dl class="grid gap-4 rounded-2xl bg-stone-100/70 p-5 text-sm text-[#2c3a40] ring-1 ring-stone-200">
					<div class="grid gap-1 sm:grid-cols-[9rem_minmax(0,1fr)] sm:gap-2">
						<dt class="text-emerald-800">Role</dt>
						<dd class="min-w-0 break-words">Professor of Mathematics, {site.affiliation}</dd>
					</div>
					<div class="grid gap-1 sm:grid-cols-[9rem_minmax(0,1fr)] sm:gap-2">
						<dt class="text-emerald-800">Research focus</dt>
						<dd class="min-w-0 break-words">
							Algebraic groups and monoids, representation theory, algebraic geometry, error-correcting codes
						</dd>
					</div>
					<div class="grid gap-1 sm:grid-cols-[9rem_minmax(0,1fr)] sm:gap-2">
						<dt class="text-emerald-800">Office</dt>
						<dd class="min-w-0 break-words">Gibson Hall, Room 319 — New Orleans, LA</dd>
					</div>
					<div class="grid gap-1 sm:grid-cols-[9rem_minmax(0,1fr)] sm:gap-2">
						<dt class="text-emerald-800">Alma maters</dt>
						<dd class="grid min-w-0 gap-3 sm:grid-cols-2">
							{almaMaters.map((item) => (
								<a
									class="flex min-w-0 items-center gap-3 rounded-xl border border-stone-200 bg-white px-3 py-2 text-emerald-900 no-underline shadow-sm transition hover:border-stone-300 hover:bg-stone-100/70"
									href={item.href}
									target="_blank"
									rel="noreferrer"
								>
									<span class="flex h-10 w-10 items-center justify-center rounded-lg bg-stone-100">
										<img
											class="max-h-8 max-w-[2rem] object-contain"
											src={item.logo}
											alt={`${item.school} logo`}
											loading="lazy"
										/>
									</span>
									<span class="min-w-0 leading-5">
										<span class="block break-words text-sm font-semibold">{item.school}</span>
										<span class="block text-xs text-[#2c3a40]">
											{item.degree} ’{item.year.slice(-2)}
										</span>
									</span>
								</a>
							))}
						</dd>
					</div>
				</dl>
			</div>
		</section>

		<section id="research" class="space-y-5">
			<div class="flex items-baseline justify-between gap-4">
				<div>
					<p class="text-xs uppercase tracking-[0.2em] text-emerald-700">Research</p>
					<h2 class="text-3xl font-semibold leading-tight">Themes & directions</h2>
				</div>
				<a class="pill" href="/CV.pdf">See full CV</a>
			</div>
			<div class="grid gap-6 md:grid-cols-2">
				{researchThemes.map((theme) => (
					<article class="rounded-2xl border border-stone-200 bg-white p-6 shadow-sm ring-1 ring-stone-200">
						<div class="flex items-start justify-between gap-3">
							<h3 class="text-xl font-semibold">{theme.title}</h3>
							<span class="rounded-full bg-stone-100 px-3 py-1 text-xs font-semibold text-emerald-800 ring-1 ring-stone-200">
								Research
							</span>
						</div>
						<p class="mt-3 text-[15px] leading-7 text-[#2c3a40]">{theme.summary}</p>
						<ul class="mt-4 flex flex-wrap gap-2 text-xs">
							{theme.keywords.map((k) => (
								<li class="pill bg-stone-100/70 text-emerald-900">{k}</li>
							))}
						</ul>
					</article>
				))}
			</div>
		</section>

		<section id="teaching" class="space-y-5">
			<div class="flex items-baseline justify-between gap-4">
				<div>
					<p class="text-xs uppercase tracking-[0.2em] text-emerald-700">Teaching & mentorship</p>
					<h2 class="text-3xl font-semibold leading-tight">Instruction and advising</h2>
				</div>
				<a class="pill" href="/teaching/">Teaching archive</a>
			</div>

			<div class="grid gap-6">
				<article class="rounded-2xl border border-stone-200 bg-white p-6 shadow-sm ring-1 ring-stone-200">
					<h3 class="text-xl font-semibold">Current teaching</h3>
					<ul class="mt-4 space-y-2">
						{teaching.map((item) => (
							<li class="rounded-xl bg-stone-100/70 p-3 ring-1 ring-stone-200">
								<div class="flex flex-wrap items-center gap-2">
									<p class="text-base font-semibold text-[#0f2c24]">{item.course}</p>
									<span class="pill bg-white text-emerald-900">Term: {item.term}</span>
								</div>
								<p class="mt-1 text-sm leading-6 text-[#2c3a40]">{item.note}</p>
							</li>
						))}
					</ul>
				</article>

				<article class="rounded-2xl border border-stone-200 bg-white p-6 shadow-sm ring-1 ring-stone-200">
					<div class="flex items-center justify-between gap-3">
						<h3 class="text-xl font-semibold">Graduate students & mentees</h3>
						<span class="text-xs uppercase tracking-[0.12em] text-emerald-700">Links can be added</span>
					</div>
					<ul class="mt-4 space-y-4">
						{advisees.map((advisee) => (
							<li class="flex gap-3 rounded-xl bg-stone-100/70 p-4 ring-1 ring-stone-200">
								<span class="mt-1 inline-block h-2.5 w-2.5 rounded-full bg-emerald-700"></span>
								<div class="space-y-1">
									<p class="text-base font-semibold text-[#0f2c24]">
										{advisee.name}
										<span class="ml-2 rounded-full bg-white px-2 py-0.5 text-xs font-semibold text-emerald-900 ring-1 ring-stone-200">
											{advisee.degree}
										</span>
									</p>
									<p class="text-sm text-[#2c3a40]">{advisee.note}</p>
								</div>
							</li>
						))}
					</ul>
				</article>
			</div>
		</section>

		<section id="qsparc" class="rounded-3xl border border-stone-200 bg-white/90 p-8 shadow-sm ring-1 ring-stone-200">
			<div class="space-y-3">
				<p class="text-xs uppercase tracking-[0.2em] text-emerald-700">Laboratory</p>
				<h2 class="text-3xl font-semibold leading-tight">QSPARC Lab</h2>
			</div>
			<p class="mt-4 text-[15px] leading-7 text-[#2c3a40]">
				QSPARC is a research initiative at Tulane University focused on advancing secure communication systems through algebraic
				methods, coding theory, and experimentation. Current work includes post-quantum cryptographic protocols, algebraic and
				geometric constructions of error-correcting codes, and hands-on testing with SDR radios. The lab is a collaborative hub for
				student research and interdisciplinary exploration.
			</p>
		</section>

		<section id="editorial" class="space-y-5">
			<div class="flex items-baseline justify-between gap-4">
				<div>
					<p class="text-xs uppercase tracking-[0.2em] text-emerald-700">Editorial work</p>
					<h2 class="text-3xl font-semibold leading-tight">Professional service</h2>
				</div>
			</div>
			<ul class="grid gap-3 md:grid-cols-2">
				{editorialWork.map((item) => (
					<li class="rounded-2xl border border-stone-200 bg-white p-4 shadow-sm ring-1 ring-stone-200">
						<a class="text-sm font-semibold text-[#0f2c24] no-underline" href={item.href} target="_blank" rel="noreferrer">
							{item.label}
						</a>
					</li>
				))}
			</ul>
		</section>

		<section id="news" class="space-y-5">
			<div class="flex items-baseline justify-between gap-4">
				<div>
					<p class="text-xs uppercase tracking-[0.2em] text-emerald-700">News</p>
					<h2 class="text-3xl font-semibold leading-tight">Highlights</h2>
				</div>
			</div>
			<ul class="space-y-4">
				{newsItems.map((item) => (
					<li class="rounded-2xl border border-stone-200 bg-white p-4 shadow-sm ring-1 ring-stone-200">
						<div class="flex flex-wrap items-start gap-3">
							<span class="pill bg-stone-100/70 text-emerald-900">{item.year}</span>
							<p class="text-sm leading-6 text-[#2c3a40]">{item.detail}</p>
						</div>
					</li>
				))}
			</ul>
		</section>

		<section id="contact" class="rounded-3xl border border-stone-200 bg-white/90 p-8 shadow-sm ring-1 ring-stone-200">
			<div class="space-y-4">
				<p class="text-xs uppercase tracking-[0.2em] text-emerald-700">Contact</p>
				<h2 class="text-3xl font-semibold leading-tight">Get in touch</h2>
				<div class="grid gap-6 md:grid-cols-2">
					<div class="space-y-3 text-[15px] leading-7 text-[#2c3a40]">
						<p>Email: <a href={`mailto:${site.email}`}>{site.email}</a></p>
						<p>Office: Gibson Hall, Room 319</p>
						<p>Address: 6283 St. Charles Ave, New Orleans, LA 70118, USA</p>
					</div>
					<div class="rounded-2xl bg-stone-100/70 p-5 text-sm text-[#2c3a40] ring-1 ring-stone-200">
						<p class="font-semibold text-[#0f2c24]">Office hours & meetings</p>
						<p class="mt-2 leading-6">
							Prospective students and collaborators are welcome to reach out by email to arrange a meeting. For current
							students, course logistics and materials are shared through Canvas.
						</p>
					</div>
				</div>
			</div>
		</section>
	</div>
</SiteLayout>
