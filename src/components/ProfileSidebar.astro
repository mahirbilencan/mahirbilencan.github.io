---
import { site } from "../lib/site";
---

<aside class="lg:sticky lg:top-20">
	<section class="rounded-3xl border border-emerald-100 bg-white p-6 shadow-sm ring-1 ring-emerald-50">
		<div class="flex items-start gap-5 lg:flex-col">
			<div class="relative">
				<div class="overflow-hidden rounded-2xl border border-emerald-100 bg-emerald-50 shadow-sm">
					<img
						src={site.profileImage ?? "/images/profile.png"}
						alt={`Portrait of ${site.name}`}
						loading="lazy"
						class="h-28 w-28 shrink-0 object-cover lg:h-auto lg:w-full lg:max-w-none"
					/>
				</div>
			</div>

			<div class="min-w-0 space-y-3">
				<div>
					<p class="text-lg font-semibold leading-tight text-[#0f2c24]">{site.name}</p>
					<p class="mt-1 text-sm uppercase tracking-[0.16em] text-emerald-700">
						Professor of Mathematics
					</p>
					<p class="text-sm text-[#2c3a40]">{site.affiliation}</p>
				</div>

				<dl class="grid gap-3 text-sm text-[#2c3a40]">
					<div class="grid grid-cols-[5.5rem_1fr] gap-2">
						<dt class="text-emerald-700">Office</dt>
						<dd class="min-w-0">Gibson Hall, Room 319</dd>
					</div>
					<div class="grid grid-cols-[5.5rem_1fr] gap-2">
						<dt class="text-emerald-700">Location</dt>
						<dd class="min-w-0">{site.location}</dd>
					</div>
					<div class="grid grid-cols-[5.5rem_1fr] gap-2">
						<dt class="text-emerald-700">Email</dt>
						<dd class="min-w-0 truncate">
							<a href={`mailto:${site.email}`}>{site.email}</a>
						</dd>
					</div>
					<div class="grid grid-cols-[5.5rem_1fr] gap-2">
						<dt class="text-emerald-700">CV</dt>
						<dd class="min-w-0">
							<a href="/CV.pdf">Download PDF</a>
						</dd>
					</div>
				</dl>

				<div class="flex flex-wrap gap-2 pt-1 text-sm">
					<a class="btn-primary" href="/CV.pdf">View CV</a>
					<a class="btn-secondary" href={`mailto:${site.email}`}>Email</a>
				</div>
			</div>
		</div>
	</section>
</aside>
